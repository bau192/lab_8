<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="vertical" android:id="@+id/cardTexto">


    <android.support.constraint.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/textoCodigo">
        <TextView
                android:layout_width="157dp"
                android:layout_height="21dp" android:id="@+id/textoCodigo"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_conversion_absoluteWidth="411dp"
                app:layout_constraintTop_toBottomOf="@+id/textUnico" android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/textUnico"/>
        <TextView
                android:layout_width="157dp"
                android:layout_height="21dp"
                android:id="@+id/textUnico"
                tools:layout_conversion_absoluteHeight="19dp" tools:layout_conversion_absoluteWidth="411dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <Button
                android:text="+"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/botonMas"
                app:layout_constraintStart_toEndOf="@+id/textUnico" android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/textUnico"/>
        <Button
                android:text="-"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:id="@+id/botonMenos" app:layout_constraintStart_toEndOf="@+id/botonMas"
                android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="@+id/botonMas"/>
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>